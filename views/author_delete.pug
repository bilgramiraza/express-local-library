extends layout 

block content 
  h1 #{title}: #{author.name}
  p #{author.lifespan}

  if author_books.length
    p #[strong Please delete #[em All] Books of #{author.name} from the database.]

    div
      h4 Books List
      dl
        each book in author_books
          dt
            a(href=book.url) #{book.title}
          dd #{book.summary}
  else
    p Confirm the Deletion of #{author.name}
    p #[strong The Author will be #[em Permenanty Deleted] from the database]

    form(action='' method='POST')
      div
        input#authorid(
          type='hidden',
          name='authorid',
          required='true',
          value=author._id
        )

        button(type='submit') Delete #{author.name}
