extends layout 

block content 
  h1=title 

  table.table.table-striped.table-bordered.table-hover.w-50
    thead 
      th Name 
      th Date Of Birth 
      th Date Of Death 
    tbody 
      each author in author_list 
        tr 
          td 
            a(href=author.url) #{author.name} 
          td #{author.date_of_birth_formatted}
          td #{author.date_of_death_formatted}
      else 
        tr.table-danger 
          td(colspan="3") No Authors Available